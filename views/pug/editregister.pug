doctype html

head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap/set/bootstrap/css')
  link(rel='stylesheet' href='/css/parkingform.css')
  title Document
.container-fluid
  .row
    nav.navbar.navbar-expand-lg.my-nav
      .container-fluid
        a.navbar-brand(href='#') DV PARKING
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page' href='tire') Tire clinic
            li.nav-item
              a.nav-link(href='battery') Battery
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              ul.dropdown-menu
                li
                  a.dropdown-item(href='#') Action
                li
                  a.dropdown-item(href='#') Another action
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href='#') Something else here
            li.nav-item
              a.nav-link.disabled(aria-disabled='true')
          button#btn.btn.btn-outline-primary(type='button' onclick="location.href = 'signup';")
              | Back
 
    .register
      form(name='registerform' action='/api/report/edit?id='+client._id method='POST')
        #title
          h3 PARKING REGISTER
        img(src='/images/truck.jpeg' alt='')
        .form.row.g-3
          .col-md-12
            label.form-label(for='firstname') Driver&apos;s Name
            input#firstname.form-control(type='text' name='firstname' value=client.firstname )
            span#dnameerror
          .col-md-12
            label.form-label(for='telephone') Phone
            input#telephone.form-control(type='text' name='telephone' value=client.telephone)
            span#cnumbererror
            .col-md-6
            label.form-label(for='ninnumber') NIN Number
            input#ninnumber.form-control(type='alpha numeric' name="ninnumber" value=client.ninnumber)
            span#ninnumError
          .col-md-6
            label.form-label(for='carnumber') Number plate
            input#carnumber.form-control(type='alpha numeric' name="carnumber" value=client.carnumber)
            span#carnumError
          .col-md-6
            label.form-label(for="vehiclemodel") Vehicle model
            select#inputState.form-select(name="vehiclemodel" value=client.vehiclemodel)
              option(selected='') Choose...
              option(value="Toyota") Toyota
              option(value="Rangerover") Rangerover
            span#modelError
          .col-md-6
            label.form-label(for='vehiclecolor') Vehicle Color
            input#vehiclecolor.form-control(type='color' name="vehiclecolor" value=client.vehiclecolor)
            span#vColorError
          .col-md-3
            label.form-label(for='date') Date
            input#exampleInputDate1.form-control(type='text' name ="date" value=client.date)
          .col-md-3
            label.form-label(for='exampleInputTime1') Time
            input#exampleInputTime1.form-control(type="text" name="time" value=client.time)
          .col-12
            button.ton-b.btn.btn-primary(type='submit' onsubmit="location.href='parking.html'") SUBMIT


          
script(src='../../set/bootstrap/js')

